---
import BaseLayout from '../../layouts/BaseLayout.astro';

const locations = [
  { name: 'Winter Haven', slug: 'winter-haven', county: 'Polk County' },
  { name: 'Lakeland', slug: 'lakeland', county: 'Polk County' },
  { name: 'Auburndale', slug: 'auburndale', county: 'Polk County' },
  { name: 'Haines City', slug: 'haines-city', county: 'Polk County' },
  { name: 'Lake Wales', slug: 'lake-wales', county: 'Polk County' },
  { name: 'Bartow', slug: 'bartow', county: 'Polk County' },
  { name: 'Davenport', slug: 'davenport', county: 'Polk County' },
  { name: 'Polk City', slug: 'polk-city', county: 'Polk County' },
  { name: 'Lake Alfred', slug: 'lake-alfred', county: 'Polk County' },
  { name: 'Dundee', slug: 'dundee', county: 'Polk County' },
  { name: 'Eagle Lake', slug: 'eagle-lake', county: 'Polk County' },
  { name: 'Fort Meade', slug: 'fort-meade', county: 'Polk County' },
];
---

<BaseLayout 
  title="Service Areas | Winter Haven Concrete Contractors"
  description="Winter Haven Concrete Contractors serves Polk County including Winter Haven, Lakeland, Auburndale, Haines City, Lake Wales & more. Call (863) 396-6145."
  canonical="/locations"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">Areas We Serve</h1>
        <p class="text-xl text-gray-300">
          Professional concrete services throughout Polk County, Florida. Find your city below or call us to confirm service availability.
        </p>
      </div>
    </div>
  </section>

  <!-- Locations Grid -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {locations.map(loc => (
          <a href={`/locations/${loc.slug}`} class="group bg-white border border-gray-200 rounded-xl p-5 hover:border-primary-500 hover:shadow-lg transition-all">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">{loc.name}</h2>
                <p class="text-sm text-gray-500">{loc.county}</p>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Area Info -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Serving All of Polk County</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              Based in Winter Haven, we provide concrete services throughout Polk County and surrounding areas. Our team travels to your location for free estimates and completes projects on-site.
            </p>
            <p>
              Don't see your city listed? Give us a call. We may still be able to help with your concrete project.
            </p>
          </div>
          <div class="mt-8">
            <a href="tel:+18633966145" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 396-6145
            </a>
          </div>
        </div>
        <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl flex items-center justify-center">
          <svg class="w-32 h-32 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
