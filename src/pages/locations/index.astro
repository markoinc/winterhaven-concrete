---
import BaseLayout from '../../layouts/BaseLayout.astro';
import locationsData from '../../data/locations.json';

// Group locations by county
const locationsByCounty = locationsData.reduce((acc, loc) => {
  const county = loc.county;
  if (!acc[county]) acc[county] = [];
  acc[county].push(loc);
  return acc;
}, {});

// Define county order (most relevant first)
const countyOrder = [
  'Polk County',
  'Osceola County', 
  'Highlands County',
  'Hillsborough County',
  'Lake County',
  'Hardee County',
  'Orange County',
  'Pasco County'
];

const sortedCounties = countyOrder.filter(c => locationsByCounty[c]);
---

<BaseLayout 
  title="Service Areas | Winter Haven Concrete Contractors | 75+ Locations"
  description="Winter Haven Concrete Contractors serves Polk, Osceola, Highlands, Hillsborough, Lake & Hardee counties. 75+ cities within 1 hour. Call (863) 396-6145."
  canonical="/locations"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">Areas We Serve</h1>
        <p class="text-xl text-gray-300 mb-4">
          Professional concrete services throughout Central Florida. We serve <strong class="text-white">75+ cities</strong> within a 1-hour drive of Winter Haven.
        </p>
        <p class="text-gray-400">
          Coverage includes Polk, Osceola, Highlands, Hillsborough, Lake, Hardee, Orange & Pasco counties.
        </p>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-8 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <div class="text-3xl font-bold text-primary-600">75+</div>
          <div class="text-sm text-gray-500">Cities Served</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary-600">8</div>
          <div class="text-sm text-gray-500">Counties Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary-600">60</div>
          <div class="text-sm text-gray-500">Mile Radius</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary-600">1 hr</div>
          <div class="text-sm text-gray-500">Max Drive Time</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Locations by County -->
  {sortedCounties.map(county => (
    <section class="py-12 lg:py-16 border-b border-gray-100 last:border-0" id={county.toLowerCase().replace(' ', '-')}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
          <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {county}
          <span class="text-sm font-normal text-gray-500">({locationsByCounty[county].length} locations)</span>
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3">
          {locationsByCounty[county].map(loc => (
            <a href={`/locations/${loc.slug}`} class="group bg-white border border-gray-200 rounded-lg px-4 py-3 hover:border-primary-500 hover:shadow-md transition-all">
              <span class="text-gray-900 group-hover:text-primary-600 font-medium transition-colors">{loc.name}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- Don't See Your City? -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Don't See Your City?</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              Based in Winter Haven, we provide concrete services throughout Central Florida. Our team travels to your location for free estimates and completes projects on-site.
            </p>
            <p>
              If your city isn't listed, give us a call! We regularly take on projects in new areas and may be able to help with your concrete needs.
            </p>
          </div>
          <div class="mt-8 flex flex-wrap gap-4">
            <a href="tel:+18633966145" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 396-6145
            </a>
            <a href="/contact" class="inline-flex items-center gap-2 bg-white hover:bg-gray-50 text-gray-700 font-semibold py-3 px-6 rounded-lg border border-gray-300 transition-all">
              Request Quote Online
            </a>
          </div>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="font-bold text-gray-900 mb-4">Our Services</h3>
          <ul class="space-y-3 mb-6">
            <li>
              <a href="/services/driveways" class="flex items-center gap-3 text-gray-600 hover:text-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Concrete Driveways
              </a>
            </li>
            <li>
              <a href="/services/patios" class="flex items-center gap-3 text-gray-600 hover:text-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Concrete Patios
              </a>
            </li>
            <li>
              <a href="/services/slabs" class="flex items-center gap-3 text-gray-600 hover:text-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Concrete Slabs
              </a>
            </li>
            <li>
              <a href="/services/stamped-concrete" class="flex items-center gap-3 text-gray-600 hover:text-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Stamped Concrete
              </a>
            </li>
          </ul>
          <p class="text-sm text-gray-500">All services available throughout our service area.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Get Started?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Contact us today for a free estimate on your concrete project.
      </p>
      <a href="tel:+18633966145" class="inline-flex items-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        Call (863) 396-6145
      </a>
    </div>
  </section>
</BaseLayout>
