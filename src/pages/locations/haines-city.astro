---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';

const city = 'Haines City';

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `Concrete Contractors in ${city}, FL`,
  "provider": {
    "@type": "LocalBusiness",
    "name": "Winter Haven Concrete Contractors",
    "telephone": "(863) 400-0803"
  },
  "areaServed": { "@type": "City", "name": city }
};
---

<BaseLayout 
  title={`Concrete Contractors ${city} FL | Driveways, Patios, Slabs`}
  description={`Professional concrete contractors in ${city}, FL. Driveways, patios, slabs & stamped concrete. Free estimates. Call (863) 400-0803.`}
  canonical="/locations/haines-city"
  schema={schema}
>
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-white">
          <nav class="text-sm text-gray-400 mb-4">
            <a href="/" class="hover:text-primary-400">Home</a> › <a href="/locations" class="hover:text-primary-400">Locations</a> › <span class="text-gray-300">{city}</span>
          </nav>
          <h1 class="text-4xl sm:text-5xl font-bold mb-6">Concrete Contractors in {city}, FL</h1>
          <p class="text-xl text-gray-300 mb-8">
            Serving {city} with professional concrete installation. Quality driveways, patios, slabs, and stamped concrete for your property.
          </p>
          <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
            Call (863) 400-0803
          </a>
        </div>
        <div>
          <ContactForm variant="dark" title={`Free Quote in ${city}`} />
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 lg:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Concrete Services in {city}</h2>
      <p class="text-lg text-gray-600 mb-8">
        {city} is growing fast, and so is the demand for quality concrete work. We serve new developments and established neighborhoods throughout the area with reliable, durable concrete installations.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/services/driveways" class="bg-gray-100 hover:bg-primary-100 px-4 py-2 rounded-lg text-gray-700 hover:text-primary-700 transition-colors">Driveways</a>
        <a href="/services/patios" class="bg-gray-100 hover:bg-primary-100 px-4 py-2 rounded-lg text-gray-700 hover:text-primary-700 transition-colors">Patios</a>
        <a href="/services/slabs" class="bg-gray-100 hover:bg-primary-100 px-4 py-2 rounded-lg text-gray-700 hover:text-primary-700 transition-colors">Slabs</a>
        <a href="/services/stamped-concrete" class="bg-gray-100 hover:bg-primary-100 px-4 py-2 rounded-lg text-gray-700 hover:text-primary-700 transition-colors">Stamped Concrete</a>
      </div>
    </div>
  </section>

  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Get Your Free Estimate in {city}</h2>
      <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        Call (863) 400-0803
      </a>
    </div>
  </section>
</BaseLayout>
