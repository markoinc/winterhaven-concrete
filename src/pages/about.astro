---
import BaseLayout from '../layouts/BaseLayout.astro';

const values = [
  { title: 'Quality First', desc: 'We use premium materials and proven techniques on every job.' },
  { title: 'Honest Pricing', desc: 'Transparent quotes with no hidden fees or surprise charges.' },
  { title: 'On-Time Delivery', desc: 'We respect your schedule and complete projects as promised.' },
  { title: 'Clean Job Sites', desc: 'We leave your property clean and debris-free.' },
];
---

<BaseLayout 
  title="About Us | Winter Haven Concrete Contractors"
  description="Learn about Winter Haven Concrete Contractors - your trusted local concrete professionals serving Polk County, FL with quality driveways, patios, and slabs."
  canonical="/about"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">About Winter Haven Concrete Contractors</h1>
        <p class="text-xl text-gray-300">
          Local concrete professionals committed to quality craftsmanship and customer satisfaction in Polk County, Florida.
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Your Local Concrete Experts</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              Winter Haven Concrete Contractors was founded with a simple mission: provide Polk County homeowners and businesses with exceptional concrete work at fair prices.
            </p>
            <p>
              Our team brings years of experience in concrete installation, from residential driveways and patios to commercial slabs and decorative stamped concrete. We understand the unique challenges of Florida's climate and build our work to last.
            </p>
            <p>
              As a locally-owned business, we're invested in our community. We take pride in every project because our reputation depends on it. When you work with us, you're not just a customerâ€”you're a neighbor.
            </p>
          </div>
        </div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden">
          <img src="/images/concrete-workers.webp" alt="Winter Haven concrete contractors team at work" class="w-full h-full object-cover" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Values</h2>
        <p class="text-xl text-gray-600">What sets us apart from other contractors.</p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map(value => (
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{value.title}</h3>
            <p class="text-gray-600">{value.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Work With Us?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free estimate for your concrete project today.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        Get Free Estimate
      </a>
    </div>
  </section>
</BaseLayout>
