---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const phone = '(863) 400-0803';
const phoneHref = 'tel:+18634000803';
---

<BaseLayout 
  title="Contact Us | Winter Haven Concrete Contractors"
  description="Contact Winter Haven Concrete Contractors for a free estimate. Call (863) 400-0803 or fill out our form for driveways, patios, slabs & stamped concrete."
  canonical="/contact"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">Contact Us</h1>
        <p class="text-xl text-gray-300">
          Ready to start your concrete project? Get in touch for a free, no-obligation estimate.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Get In Touch</h2>
          <p class="text-gray-600 mb-8">
            Whether you need a new driveway, patio, slab, or decorative stamped concrete, we're here to help. Reach out today and let's discuss your project.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Phone</h3>
                <a href={phoneHref} class="text-primary-600 hover:text-primary-700 font-medium">{phone}</a>
                <p class="text-sm text-gray-500 mt-1">Mon-Fri 7am-6pm, Sat 8am-4pm</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Service Area</h3>
                <p class="text-gray-600">Winter Haven, FL & Polk County</p>
                <a href="/locations" class="text-primary-600 hover:text-primary-700 text-sm font-medium">View all areas â†’</a>
              </div>
            </div>
          </div>
          
          <!-- Quick Benefits -->
          <div class="mt-10 p-6 bg-gray-50 rounded-xl">
            <h3 class="font-semibold text-gray-900 mb-4">Why Contact Us?</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Free estimates within 24 hours
              </li>
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                No-obligation consultations
              </li>
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Licensed & insured contractors
              </li>
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Quality workmanship guaranteed
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div>
          <ContactForm title="Request Your Free Estimate" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
