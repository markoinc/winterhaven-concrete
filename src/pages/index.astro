---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const services = [
  {
    title: 'Concrete Driveways',
    description: 'Durable, professionally-installed driveways that enhance curb appeal and withstand Florida weather.',
    href: '/services/driveways',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path></svg>`
  },
  {
    title: 'Concrete Patios',
    description: 'Create the perfect outdoor living space with custom concrete patios built to last.',
    href: '/services/patios',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>`
  },
  {
    title: 'Concrete Slabs',
    description: 'Strong foundations and slabs for sheds, garages, workshops, and commercial applications.',
    href: '/services/slabs',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>`
  },
  {
    title: 'Stamped Concrete',
    description: 'Beautiful decorative concrete that mimics stone, brick, or tile at a fraction of the cost.',
    href: '/services/stamped-concrete',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path></svg>`
  },
];

const benefits = [
  { title: 'Licensed & Insured', desc: 'Full protection for every project' },
  { title: 'Free Estimates', desc: 'No-obligation quotes within 24 hours' },
  { title: 'Quality Materials', desc: 'Premium concrete mixes for durability' },
  { title: 'Local Experts', desc: 'Polk County contractors who know FL weather' },
];

const areas = ['Winter Haven', 'Lakeland', 'Auburndale', 'Haines City', 'Lake Wales', 'Bartow', 'Davenport', 'Polk City'];
---

<BaseLayout 
  title="Winter Haven Concrete Contractors | Driveways, Patios & Slabs"
  description="Professional concrete contractors in Winter Haven, FL. Expert installation of driveways, patios, slabs & stamped concrete. Free estimates. Call (863) 396-6145."
  canonical="/"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-16 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/concrete-texture.jpg')] opacity-10 bg-cover bg-center"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Hero Content -->
        <div class="text-white">
          <div class="inline-flex items-center gap-2 bg-primary-500/20 border border-primary-500/30 rounded-full px-4 py-2 mb-6">
            <span class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></span>
            <span class="text-primary-300 text-sm font-medium">Serving Polk County, Florida</span>
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Winter Haven's Trusted 
            <span class="text-primary-400">Concrete Contractors</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            Professional concrete installation for driveways, patios, slabs, and decorative stamped concrete. Quality craftsmanship backed by years of experience.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a href="tel:+18633966145" class="inline-flex items-center justify-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-4 px-8 rounded-lg transition-all hover:-translate-y-0.5 hover:shadow-xl">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 396-6145
            </a>
            <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold py-4 px-8 rounded-lg border border-white/20 transition-all">
              Get Free Estimate
            </a>
          </div>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-6 text-sm text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Free Estimates</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Satisfaction Guaranteed</span>
            </div>
          </div>
        </div>
        
        <!-- Hero Form -->
        <div>
          <ContactForm variant="dark" />
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Our Concrete Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          From simple slabs to decorative stamped concrete, we deliver quality workmanship on every project.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        {services.map(service => (
          <a href={service.href} class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-xl transition-all hover:-translate-y-1">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center text-primary-600 mb-4 group-hover:bg-primary-500 group-hover:text-white transition-colors" set:html={service.icon}></div>
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
            Why Choose Winter Haven Concrete Contractors?
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            We're local contractors who understand Polk County's unique climate and soil conditions. Our team delivers durable, beautiful concrete work that stands up to Florida's heat, humidity, and occasional freezes.
          </p>
          
          <div class="grid sm:grid-cols-2 gap-6">
            {benefits.map(benefit => (
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">{benefit.title}</h3>
                  <p class="text-gray-600 text-sm">{benefit.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-[4/3] bg-gradient-to-br from-slate-200 to-slate-300 rounded-2xl overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center text-slate-400">
              <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="absolute -bottom-6 -right-6 bg-primary-500 text-white rounded-xl p-6 shadow-xl">
            <div class="text-4xl font-bold">10+</div>
            <div class="text-primary-100">Years Experience</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 lg:py-24 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Serving Polk County & Beyond</h2>
        <p class="text-xl text-gray-300">
          We provide concrete services throughout Central Florida.
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4">
        {areas.map(area => (
          <a href={`/locations/${area.toLowerCase().replace(/\s+/g, '-')}`} class="bg-white/10 hover:bg-primary-500 px-6 py-3 rounded-full font-medium transition-colors">
            {area}
          </a>
        ))}
      </div>
      
      <div class="text-center mt-8">
        <a href="/locations" class="text-primary-400 hover:text-primary-300 font-medium inline-flex items-center gap-2">
          View All Service Areas
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Start Your Concrete Project?
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free, no-obligation estimate today. We'll assess your project and provide honest, competitive pricing.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+18633966145" class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all hover:-translate-y-0.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (863) 396-6145
        </a>
        <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 px-8 rounded-lg border-2 border-primary-400 transition-all">
          Request Free Quote
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
