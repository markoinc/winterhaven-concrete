                <option value="slab">Concrete Slab</option>
                <option value="stamped">Stamped/Decorative Concrete</option>
                <option value="sidewalk">Sidewalk/Walkway</option>
                <option value="other">Something Else</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Tell us about your project</label>
              <textarea name="message" rows="3" 
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-all resize-none"
