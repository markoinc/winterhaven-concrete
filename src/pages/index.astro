import BaseLayout from '../layouts/BaseLayout.astro';

const phone = '(863) 400-0803';
const phoneHref = 'tel:+18634000803';

const services = [
  {
    title: 'Driveways',
    description: 'Built to handle Florida heat and daily use. New installations, extensions, and replacements.',
    href: '/services/driveways',
    image: '/images/concrete-driveway.webp'
  },
  {
    title: 'Patios',
    description: 'Extend your living space outdoors. Perfect for Polk County\'s year-round sunshine.',
    href: '/services/patios',
    image: '/images/concrete-patio.webp'
  },
  {
    title: 'Concrete Slabs',
    description: 'Solid foundations for sheds, workshops, and outbuildings. Proper prep, proper pour.',
    href: '/services/slabs',
    image: '/images/concrete-slab.webp'
  },
  {
    title: 'Stamped Concrete',
    description: 'The look of stone or brick without the price. Popular around Lake Howard homes.',
    href: '/services/stamped-concrete',
    image: '/images/stamped-concrete.webp'
  },
];

const reviews = [
  {
    name: 'Mike T.',
    location: 'Cypress Gardens area',
    text: 'Had them pour a new driveway last spring. Crew showed up on time, cleaned up after themselves, and the concrete has held up great through two hurricane seasons.',
    rating: 5
  },
  {
    name: 'Jennifer R.',
    location: 'Lake Shipp neighborhood',
    text: 'We got quotes from three companies. These guys weren\'t the cheapest but they were the most straightforward about what we needed. Patio turned out beautiful.',
    rating: 5
  },
  {
    name: 'Carlos M.',
    location: 'Winter Haven',
    text: 'Fixed a cracked slab behind my shop that two other contractors said couldn\'t be repaired. Fair price, solid work. Would use again.',
    rating: 5
  },
];

const stats = [
  { number: '500+', label: 'Projects Completed' },
  { number: '12', label: 'Years in Business' },
  { number: '4.9', label: 'Google Rating' },
  { number: '100%', label: 'Licensed & Insured' },
];

const areas = [
  'Winter Haven',
  'Lakeland', 
  'Auburndale',
  'Haines City',
  'Lake Wales',
  'Bartow',
  'Davenport',
  'Polk City'
];

// FAQPage Schema with 8 questions
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does a concrete driveway cost in Winter Haven?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most driveways in Polk County run between $8-15 per square foot installed, depending on size, thickness, and any decorative work. A typical 2-car driveway (400-600 sq ft) usually costs $4,000-8,000. We give free quotes so you know exactly what to expect."
      }
    },
    {
      "@type": "Question",
      "name": "How long before I can walk on new concrete?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Light foot traffic is usually fine after 24-48 hours. For vehicles on driveways, we recommend waiting 7 days. Full cure takes about 28 days, but you can use it normally after the first week."
      }
    },
    {
      "@type": "Question",
      "name": "Do you pour concrete in the rain?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No—rain during a pour can ruin the concrete. We watch the weather closely and will reschedule if there's a significant chance of rain. Florida weather is unpredictable, but we'd rather delay a day than do a bad job."
      }
    },
    {
      "@type": "Question",
      "name": "Can you fix cracked concrete or do I need to replace it?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Depends on the damage. Small cracks can often be sealed. Larger structural cracks or heaving usually means replacement. We'll give you an honest assessment—we're not going to push a replacement if a repair will work."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need a permit for a concrete driveway in Polk County?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "In most cases, yes. Polk County requires permits for new driveways and significant modifications. We handle the permit process for you as part of our service—it's included in the quote and saves you the hassle of dealing with the building department."
      }
    },
    {
      "@type": "Question",
      "name": "What thickness should my concrete driveway be?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For residential driveways in Florida, we pour a minimum of 4 inches thick. For areas that might see heavier vehicles like RVs or boats, we recommend 5-6 inches. We also use proper reinforcement mesh or rebar depending on the application."
      }
    },
    {
      "@type": "Question",
      "name": "How long does a concrete driveway last in Florida?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "A properly installed concrete driveway in Florida typically lasts 25-30 years or more. The key is proper site prep, correct concrete mix for our climate, and appropriate curing time. We use a minimum 4,000 PSI mix designed for Florida's heat and humidity."
      }
    },
    {
      "@type": "Question",
      "name": "What's the difference between stamped concrete and pavers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Stamped concrete is a single poured surface textured and colored to look like stone or brick, while pavers are individual pieces set in sand. Stamped concrete costs 30-50% less, won't shift or grow weeds between joints, and requires less maintenance. Pavers can be easier to repair in small sections if needed."
      }
    }
  ]
};
---

<BaseLayout 
  title="Concrete Contractors Winter Haven FL | Driveways, Patios & Slabs"
  description="Local concrete contractors in Winter Haven and Polk County, FL. Driveways, patios, slabs, stamped concrete. Free estimates. Call (863) 400-0803."
  canonical="/"
  schema={faqSchema}
>
  <!-- Hero - Clean, Light, Professional -->
  <section class="relative bg-gradient-to-b from-sky-50 to-white pt-8 pb-16 lg:pt-12 lg:pb-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Urgency Banner -->
      <div class="bg-amber-50 border border-amber-200 rounded-lg px-4 py-3 mb-8 flex items-center justify-center gap-3 text-sm">
        <span class="inline-flex items-center gap-1.5 text-amber-800 font-medium">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
