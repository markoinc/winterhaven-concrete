---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';

const benefits = [
  'Enhances curb appeal and property value',
  'Durable and long-lasting (25+ years)',
  'Low maintenance compared to asphalt',
  'Resists Florida heat and UV damage',
  'Multiple finish options available',
  'Custom shapes and sizes possible',
];

const process = [
  { step: '1', title: 'Free Consultation', desc: 'We assess your property, discuss options, and provide a detailed estimate.' },
  { step: '2', title: 'Site Preparation', desc: 'We excavate, grade, and prepare a stable base for your new driveway.' },
  { step: '3', title: 'Forming & Pouring', desc: 'Precision forming followed by professional concrete pouring and finishing.' },
  { step: '4', title: 'Curing & Completion', desc: 'Proper curing time ensures maximum strength and durability.' },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Concrete Driveway Installation",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Winter Haven Concrete Contractors"
  },
  "areaServed": {
    "@type": "City",
    "name": "Winter Haven, Florida"
  },
  "description": "Professional concrete driveway installation in Winter Haven, FL. Durable, beautiful driveways built to last."
};
---

<BaseLayout 
  title="Concrete Driveways Winter Haven FL | Professional Installation"
  description="Expert concrete driveway installation in Winter Haven, FL. Durable, beautiful driveways that enhance curb appeal. Free estimates. Call (863) 396-6145."
  canonical="/services/driveways"
  schema={schema}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-white">
          <nav class="text-sm text-gray-400 mb-4">
            <a href="/" class="hover:text-primary-400">Home</a>
            <span class="mx-2">â€º</span>
            <span class="text-gray-300">Concrete Driveways</span>
          </nav>
          <h1 class="text-4xl sm:text-5xl font-bold mb-6">Concrete Driveway Contractors in Winter Haven</h1>
          <p class="text-xl text-gray-300 mb-8">
            Transform your home's entrance with a professionally installed concrete driveway. Built to withstand Florida's climate and designed to last for decades.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="tel:+18633966145" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 396-6145
            </a>
            <a href="/contact" class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-6 rounded-lg border border-white/20 transition-all">
              Get Free Quote
            </a>
          </div>
        </div>
        <div>
          <ContactForm variant="dark" title="Get Your Driveway Quote" />
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Choose Concrete for Your Driveway?</h2>
          <p class="text-lg text-gray-600 mb-8">
            A concrete driveway is one of the best investments you can make in your property. It combines durability, aesthetics, and low maintenance for a superior driving and walking surface.
          </p>
          <ul class="space-y-4">
            {benefits.map(benefit => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="aspect-[4/3] bg-gradient-to-br from-slate-200 to-slate-300 rounded-2xl flex items-center justify-center text-slate-400">
          <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Driveway Installation Process</h2>
        <p class="text-xl text-gray-600">Professional installation from start to finish.</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {process.map(item => (
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <div class="w-12 h-12 bg-primary-500 text-white rounded-xl flex items-center justify-center font-bold text-xl mb-4">
              {item.step}
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{item.title}</h3>
            <p class="text-gray-600">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready for a New Driveway?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free estimate for your concrete driveway project in Winter Haven.
      </p>
      <a href="tel:+18633966145" class="inline-flex items-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call (863) 396-6145
      </a>
    </div>
  </section>
</BaseLayout>
