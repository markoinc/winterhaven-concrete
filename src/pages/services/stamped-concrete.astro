---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';

const patterns = [
  'Ashlar Slate',
  'Cobblestone',
  'Herringbone Brick',
  'Random Stone',
  'Wood Plank',
  'Flagstone',
];

const colors = [
  'Terra Cotta',
  'Sandstone',
  'Charcoal',
  'Desert Tan',
  'Slate Gray',
  'Brick Red',
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Stamped Concrete Installation",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Winter Haven Concrete Contractors"
  },
  "areaServed": {
    "@type": "City",
    "name": "Winter Haven, Florida"
  },
  "description": "Professional stamped concrete installation in Winter Haven, FL. Decorative concrete that mimics stone, brick, and tile."
};
---

<BaseLayout 
  title="Stamped Concrete Winter Haven FL | Decorative Concrete"
  description="Beautiful stamped concrete in Winter Haven, FL. Decorative patterns mimicking stone, brick & tile. Free estimates. Call (863) 400-0803."
  canonical="/services/stamped-concrete"
  schema={schema}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-white">
          <nav class="text-sm text-gray-400 mb-4">
            <a href="/" class="hover:text-primary-400">Home</a>
            <span class="mx-2">â€º</span>
            <span class="text-gray-300">Stamped Concrete</span>
          </nav>
          <h1 class="text-4xl sm:text-5xl font-bold mb-6">Stamped Concrete in Winter Haven</h1>
          <p class="text-xl text-gray-300 mb-8">
            Get the elegant look of natural stone, brick, or tile at a fraction of the cost with professionally installed stamped concrete.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 400-0803
            </a>
            <a href="/contact" class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-6 rounded-lg border border-white/20 transition-all">
              Get Free Quote
            </a>
          </div>
        </div>
        <div>
          <ContactForm variant="dark" title="Get Your Stamped Quote" />
        </div>
      </div>
    </div>
  </section>

  <!-- What is Stamped Concrete -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">What is Stamped Concrete?</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              Stamped concrete is a decorative technique where freshly poured concrete is textured and colored to resemble natural materials like stone, brick, slate, or wood.
            </p>
            <p>
              It's an affordable alternative to expensive pavers or natural stone, offering the same visual appeal with the durability and low maintenance of concrete.
            </p>
            <p>
              Perfect for patios, pool decks, driveways, walkways, and entryways, stamped concrete transforms ordinary surfaces into stunning features.
            </p>
          </div>
        </div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden">
          <img src="/images/stamped-concrete.webp" alt="Stamped decorative concrete in Winter Haven FL" class="w-full h-full object-cover" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Patterns & Colors -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Patterns & Colors</h2>
        <p class="text-xl text-gray-600">Endless design possibilities for your project.</p>
      </div>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Popular Patterns</h3>
          <div class="flex flex-wrap gap-2">
            {patterns.map(pattern => (
              <span class="bg-gray-100 px-3 py-1.5 rounded-full text-gray-700 text-sm">{pattern}</span>
            ))}
          </div>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Popular Colors</h3>
          <div class="flex flex-wrap gap-2">
            {colors.map(color => (
              <span class="bg-gray-100 px-3 py-1.5 rounded-full text-gray-700 text-sm">{color}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Benefits of Stamped Concrete</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Cost Effective</h3>
          <p class="text-gray-600 text-sm">30-50% less than natural stone or pavers</p>
        </div>
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Durable</h3>
          <p class="text-gray-600 text-sm">Built to withstand Florida's climate</p>
        </div>
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Customizable</h3>
          <p class="text-gray-600 text-sm">Endless patterns and color combinations</p>
        </div>
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Low Maintenance</h3>
          <p class="text-gray-600 text-sm">Easy to clean and maintain</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready for Beautiful Stamped Concrete?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free estimate for your decorative concrete project in Winter Haven.
      </p>
      <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        Call (863) 400-0803
      </a>
    </div>
  </section>
</BaseLayout>
