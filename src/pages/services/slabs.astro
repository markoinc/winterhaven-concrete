---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';

const applications = [
  { title: 'Garage Slabs', desc: 'Strong foundation for vehicle weight and equipment storage.' },
  { title: 'Shed Foundations', desc: 'Level base for storage sheds and outbuildings.' },
  { title: 'Workshop Floors', desc: 'Durable surface for home workshops and hobby spaces.' },
  { title: 'Equipment Pads', desc: 'Stable platforms for HVAC units and generators.' },
  { title: 'Pool Decks', desc: 'Smooth, safe surfaces around swimming pools.' },
  { title: 'Commercial Slabs', desc: 'Heavy-duty concrete for business applications.' },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Concrete Slab Installation",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Winter Haven Concrete Contractors"
  },
  "areaServed": {
    "@type": "City",
    "name": "Winter Haven, Florida"
  },
  "description": "Professional concrete slab installation in Winter Haven, FL. Foundations, garage floors, shed pads, and more."
};
---

<BaseLayout 
  title="Concrete Slabs Winter Haven FL | Foundations & Floors"
  description="Professional concrete slab installation in Winter Haven, FL. Garage floors, shed foundations, equipment pads. Free estimates. Call (863) 400-0803."
  canonical="/services/slabs"
  schema={schema}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-white">
          <nav class="text-sm text-gray-400 mb-4">
            <a href="/" class="hover:text-primary-400">Home</a>
            <span class="mx-2">â€º</span>
            <span class="text-gray-300">Concrete Slabs</span>
          </nav>
          <h1 class="text-4xl sm:text-5xl font-bold mb-6">Concrete Slab Installation in Winter Haven</h1>
          <p class="text-xl text-gray-300 mb-8">
            Strong, level concrete slabs for any application. From garage floors to commercial foundations, we build to last.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (863) 400-0803
            </a>
            <a href="/contact" class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-6 rounded-lg border border-white/20 transition-all">
              Get Free Quote
            </a>
          </div>
        </div>
        <div>
          <ContactForm variant="dark" title="Get Your Slab Quote" />
        </div>
      </div>
    </div>
  </section>

  <!-- Applications -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Concrete Slab Applications</h2>
        <p class="text-xl text-gray-600">We pour slabs for residential and commercial projects.</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {applications.map(app => (
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-2">{app.title}</h3>
            <p class="text-gray-600">{app.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Quality Matters -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Proper Slab Installation Matters</h2>
          <div class="space-y-4 text-gray-600">
            <p>
              A concrete slab is only as good as its preparation. Poor site prep, incorrect thickness, or improper curing leads to cracking, settling, and costly repairs.
            </p>
            <p>
              We do it right the first time. Our process includes proper excavation, compacted gravel base, reinforcement as needed, and professional finishing for a slab that performs for decades.
            </p>
          </div>
          <div class="mt-8 grid grid-cols-2 gap-4">
            <div class="bg-white p-4 rounded-lg shadow-sm">
              <div class="text-2xl font-bold text-primary-600">4"</div>
              <div class="text-gray-600 text-sm">Standard thickness</div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm">
              <div class="text-2xl font-bold text-primary-600">3000+</div>
              <div class="text-gray-600 text-sm">PSI concrete</div>
            </div>
          </div>
        </div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden">
          <img src="/images/concrete-slab.webp" alt="Concrete slab foundation in Winter Haven FL" class="w-full h-full object-cover" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-20 bg-primary-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Need a Concrete Slab?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free estimate for your slab project in Winter Haven.
      </p>
      <a href="tel:+18634000803" class="inline-flex items-center gap-2 bg-white text-primary-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all">
        Call (863) 400-0803
      </a>
    </div>
  </section>
</BaseLayout>
