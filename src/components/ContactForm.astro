---
interface Props {
  variant?: 'light' | 'dark';
  title?: string;
}

const { variant = 'light', title = 'Get Your Free Estimate' } = Astro.props;
const bgClass = variant === 'dark' ? 'bg-slate-800' : 'bg-white';
const textClass = variant === 'dark' ? 'text-white' : 'text-gray-900';
const inputBg = variant === 'dark' ? 'bg-slate-700 border-slate-600 text-white placeholder-gray-400' : 'bg-white border-gray-300 text-gray-900 placeholder-gray-500';
---

<div class={`${bgClass} rounded-xl shadow-xl p-6 sm:p-8`}>
  <h3 class={`text-2xl font-bold ${textClass} mb-2`}>{title}</h3>
  <p class={`${variant === 'dark' ? 'text-gray-300' : 'text-gray-600'} mb-6`}>
    Fill out the form below for a free, no-obligation quote.
  </p>
  
  <form action="https://formspree.io/f/placeholder" method="POST" class="space-y-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label class={`block text-sm font-medium ${variant === 'dark' ? 'text-gray-300' : 'text-gray-700'} mb-1`}>
          Name *
        </label>
        <input 
          type="text" 
          name="name" 
          required 
          class={`w-full px-4 py-3 rounded-lg border ${inputBg} focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all`}
          placeholder="Your name"
        >
      </div>
      <div>
        <label class={`block text-sm font-medium ${variant === 'dark' ? 'text-gray-300' : 'text-gray-700'} mb-1`}>
          Phone *
        </label>
        <input 
          type="tel" 
          name="phone" 
          required 
          class={`w-full px-4 py-3 rounded-lg border ${inputBg} focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all`}
          placeholder="(555) 123-4567"
        >
      </div>
    </div>
    
    <div>
      <label class={`block text-sm font-medium ${variant === 'dark' ? 'text-gray-300' : 'text-gray-700'} mb-1`}>
        Email
      </label>
      <input 
        type="email" 
        name="email" 
        class={`w-full px-4 py-3 rounded-lg border ${inputBg} focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all`}
        placeholder="your@email.com"
      >
    </div>
    
    <div>
      <label class={`block text-sm font-medium ${variant === 'dark' ? 'text-gray-300' : 'text-gray-700'} mb-1`}>
        Service Needed
      </label>
      <select 
        name="service" 
        class={`w-full px-4 py-3 rounded-lg border ${inputBg} focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all`}
      >
        <option value="">Select a service...</option>
        <option value="driveway">Concrete Driveway</option>
        <option value="patio">Concrete Patio</option>
        <option value="slab">Concrete Slab</option>
        <option value="stamped">Stamped Concrete</option>
        <option value="other">Other</option>
      </select>
    </div>
    
    <div>
      <label class={`block text-sm font-medium ${variant === 'dark' ? 'text-gray-300' : 'text-gray-700'} mb-1`}>
        Project Details
      </label>
      <textarea 
        name="message" 
        rows="4" 
        class={`w-full px-4 py-3 rounded-lg border ${inputBg} focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none`}
        placeholder="Tell us about your project..."
      ></textarea>
    </div>
    
    <button 
      type="submit" 
      class="w-full bg-primary-500 hover:bg-primary-600 text-white font-semibold py-4 px-6 rounded-lg transition-all hover:-translate-y-0.5 hover:shadow-lg"
    >
      Get Free Estimate
    </button>
    
    <p class={`text-xs ${variant === 'dark' ? 'text-gray-400' : 'text-gray-500'} text-center`}>
      By submitting, you agree to our <a href="/privacy" class="underline hover:text-primary-500">Privacy Policy</a>.
    </p>
  </form>
</div>
