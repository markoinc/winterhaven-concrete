---
const phone = '(863) 396-6145';
const phoneHref = 'tel:+18633966145';
const currentYear = new Date().getFullYear();

const services = [
  { href: '/services/driveways', label: 'Concrete Driveways' },
  { href: '/services/patios', label: 'Concrete Patios' },
  { href: '/services/slabs', label: 'Concrete Slabs' },
  { href: '/services/stamped-concrete', label: 'Stamped Concrete' },
];

// Featured locations (most important cities)
const featuredLocations = [
  { href: '/locations/winter-haven', label: 'Winter Haven' },
  { href: '/locations/lakeland', label: 'Lakeland' },
  { href: '/locations/auburndale', label: 'Auburndale' },
  { href: '/locations/haines-city', label: 'Haines City' },
  { href: '/locations/lake-wales', label: 'Lake Wales' },
  { href: '/locations/bartow', label: 'Bartow' },
  { href: '/locations/kissimmee', label: 'Kissimmee' },
  { href: '/locations/plant-city', label: 'Plant City' },
];

// Counties served
const countiesServed = [
  'Polk County',
  'Osceola County',
  'Highlands County',
  'Hillsborough County',
  'Lake County',
  'Hardee County',
  'Orange County',
  'Pasco County',
];

const company = [
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
  { href: '/locations', label: 'All Service Areas' },
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-sky-700 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <span class="text-white font-bold text-lg">Winter Haven</span>
            <span class="block text-sky-400 text-sm font-medium -mt-1">Concrete Contractors</span>
          </div>
        </div>
        <p class="text-gray-400 text-sm mb-4 leading-relaxed">
          Local concrete contractors serving Winter Haven and 75+ cities across Central Florida. 
          Driveways, patios, slabs, and decorative concrete done right.
        </p>
        <a href={phoneHref} class="inline-flex items-center gap-2 text-sky-400 hover:text-sky-300 font-semibold">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {phone}
        </a>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-sky-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Locations -->
      <div>
        <h3 class="text-white font-semibold mb-4">Service Areas</h3>
        <ul class="space-y-2">
          {featuredLocations.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-sky-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a href="/locations" class="text-sky-400 hover:text-sky-300 text-sm font-medium transition-colors">
              View All 75+ Cities →
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2">
          {company.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-sky-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Counties Bar -->
  <div class="border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="text-center">
        <p class="text-xs text-gray-500 mb-2">Proudly Serving</p>
        <p class="text-sm text-gray-400">
          {countiesServed.join(' • ')}
        </p>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          © {currentYear} Winter Haven Concrete Contractors. All rights reserved.
        </p>
        <div class="flex items-center gap-4 text-sm text-gray-500">
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
            FL Licensed & Insured
          </span>
          <span>•</span>
          <span>Central Florida</span>
        </div>
      </div>
    </div>
  </div>
</footer>
