---
const phone = '(863) 396-6145';
const phoneHref = 'tel:+18633966145';
const currentYear = new Date().getFullYear();

const services = [
  { href: '/services/driveways', label: 'Concrete Driveways' },
  { href: '/services/patios', label: 'Concrete Patios' },
  { href: '/services/slabs', label: 'Concrete Slabs' },
  { href: '/services/stamped-concrete', label: 'Stamped Concrete' },
];

const locations = [
  { href: '/locations/winter-haven', label: 'Winter Haven' },
  { href: '/locations/lakeland', label: 'Lakeland' },
  { href: '/locations/auburndale', label: 'Auburndale' },
  { href: '/locations/haines-city', label: 'Haines City' },
  { href: '/locations/lake-wales', label: 'Lake Wales' },
];

const company = [
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
  { href: '/locations', label: 'Service Areas' },
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
];
---

<footer class="bg-slate-900 text-gray-300">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <span class="text-white font-bold text-lg">Winter Haven</span>
            <span class="block text-primary-400 text-sm font-medium -mt-1">Concrete Contractors</span>
          </div>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          Professional concrete services in Winter Haven and Polk County, Florida. Quality craftsmanship for driveways, patios, slabs, and decorative concrete.
        </p>
        <a href={phoneHref} class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 font-semibold">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {phone}
        </a>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-primary-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Locations -->
      <div>
        <h3 class="text-white font-semibold mb-4">Service Areas</h3>
        <ul class="space-y-2">
          {locations.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-primary-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2">
          {company.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-primary-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          Â© {currentYear} Winter Haven Concrete Contractors. All rights reserved.
        </p>
        <p class="text-gray-500 text-sm">
          Serving Polk County, Florida
        </p>
      </div>
    </div>
  </div>
</footer>
