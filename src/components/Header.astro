---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services/driveways', label: 'Driveways' },
  { href: '/services/patios', label: 'Patios' },
  { href: '/services/slabs', label: 'Slabs' },
  { href: '/services/stamped-concrete', label: 'Stamped' },
  { href: '/locations', label: 'Areas Served' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const phone = '(863) 400-0803';
const phoneHref = 'tel:+18634000803';
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
  <!-- Top bar with phone -->
  <div class="bg-gray-900 text-white py-2 hidden sm:block">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center text-sm">
      <div class="flex items-center gap-4">
        <span class="flex items-center gap-1.5 text-gray-300">
          <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
          Licensed & Insured
        </span>
        <span class="text-gray-500">|</span>
        <span class="text-gray-300">Serving Winter Haven & Polk County</span>
      </div>
      <a href={phoneHref} class="flex items-center gap-2 font-semibold hover:text-sky-300 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        {phone}
      </a>
    </div>
  </div>
  
  <!-- Main nav -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-3">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/images/logo.png" alt="Winter Haven Concrete Co." class="h-12 w-auto">
      </a>
      
      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-6">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-700 hover:text-sky-700 font-medium text-sm transition-colors">
            {link.label}
          </a>
        ))}
      </nav>
      
      <!-- CTA Phone -->
      <div class="flex items-center gap-4">
        <a href={phoneHref} class="hidden sm:flex items-center gap-2 bg-sky-700 hover:bg-sky-800 text-white px-4 py-2.5 rounded-lg font-semibold text-sm transition-all hover:-translate-y-0.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {phone}
        </a>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 rounded-lg hover:bg-gray-100" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-100 bg-white">
    <nav class="px-4 py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 px-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-sky-700 font-medium">
          {link.label}
        </a>
      ))}
      <a href={phoneHref} class="flex items-center justify-center gap-2 mt-4 bg-sky-700 text-white py-3 rounded-lg font-semibold">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call {phone}
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
