---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services/driveways', label: 'Driveways' },
  { href: '/services/patios', label: 'Patios' },
  { href: '/services/slabs', label: 'Slabs' },
  { href: '/services/stamped-concrete', label: 'Stamped' },
  { href: '/locations', label: 'Areas Served' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const phone = '(863) 396-6145';
const phoneHref = 'tel:+18633966145';
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-3">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <div class="hidden sm:block">
          <span class="text-xl font-bold text-gray-900">Winter Haven</span>
          <span class="block text-sm text-primary-600 font-medium -mt-1">Concrete Contractors</span>
        </div>
      </a>
      
      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-6">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-700 hover:text-primary-600 font-medium text-sm transition-colors">
            {link.label}
          </a>
        ))}
      </nav>
      
      <!-- CTA Phone -->
      <div class="flex items-center gap-4">
        <a href={phoneHref} class="hidden sm:flex items-center gap-2 bg-primary-500 hover:bg-primary-600 text-white px-4 py-2.5 rounded-lg font-semibold text-sm transition-all hover:-translate-y-0.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {phone}
        </a>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 rounded-lg hover:bg-gray-100" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-100 bg-white">
    <nav class="px-4 py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 px-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-primary-600 font-medium">
          {link.label}
        </a>
      ))}
      <a href={phoneHref} class="flex items-center justify-center gap-2 mt-4 bg-primary-500 text-white py-3 rounded-lg font-semibold">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call {phone}
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
